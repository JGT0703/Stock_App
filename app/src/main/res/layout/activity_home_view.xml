<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Home_view">

    <Button
        android:id="@+id/button"
        android:layout_width="205dp"
        android:layout_height="75dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="617dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/btn_bg_selector"
        android:onClick="logout_button"
        android:text="Logout"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="302dp"
        android:layout_height="67dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="628dp"
        android:gravity="center"
        android:text="Home Page"
        android:textAlignment="center"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/stock_button"
        android:layout_width="205dp"
        android:layout_height="75dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="498dp"
        android:background="@drawable/btn_bg_selector"
        android:onClick="stock_button"
        android:text="Stock"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="205dp"
        android:layout_height="75dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="263dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="393dp"
        android:background="@drawable/btn_bg_selector"
        android:onClick="orders_button"
        android:text="Orders"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/cart_button"
        android:layout_width="205dp"
        android:layout_height="75dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="290dp"
        android:background="@drawable/btn_bg_selector"
        android:onClick="cart_button"
        android:text="Cart"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>