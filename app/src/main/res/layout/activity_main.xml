<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_background2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_TextView"
        android:layout_width="266dp"
        android:layout_height="58dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="497dp"
        android:text="Sign In"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="432dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextUsername"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="302dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="299dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="367dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/forgotPasswordButton"
        android:layout_width="126dp"
        android:layout_height="58dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="639dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/btn_bg_selector"
        android:text="Reset Password"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="499dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="187dp"
        android:switchMinWidth="80dp"
        android:thumb="@drawable/thumb"
        android:track="@drawable/custom_switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="169dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="555dp"
        android:background="@drawable/logo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="499dp"
        android:layout_marginEnd="248dp"
        android:layout_marginBottom="187dp"
        android:gravity="center"
        android:text="Sign In"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="499dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="187dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="409dp"
        android:layout_height="55dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="561dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="114dp"
        android:background="@drawable/btn_bg_selector"
        android:text="Login"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/userTypeSpinner"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="429dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="237dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>