<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#AAAAAA"/> <!-- Changed to a light grey color -->
                    <corners android:radius="100sp"/>
                    <stroke android:color="#CCCCCC" android:width="1dp"/> <!-- Added a stroke for a metallic look -->
                </shape>
            </item>
            <item android:bottom="50dp" android:top="50dp" android:left="60dp" android:right="60dp">
                <shape android:shape="rectangle">
                    <solid android:color="#AAAAAA"/> <!-- Changed to a light grey color -->
                    <corners android:radius="50sp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#AAAAAA"/> <!-- Changed to a dark grey color -->
                    <corners android:radius="100sp"/>
                    <stroke android:color="#CCCCCC" android:width="1dp"/> <!-- Added a stroke for a metallic look -->
                </shape>
            </item>
            <item android:bottom="50dp" android:top="50dp" android:left="60dp" android:right="60dp">
                <shape android:shape="rectangle">
                    <solid android:color="#AAAAAA"/> <!-- Changed to a dark grey color -->
                    <corners android:radius="50sp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>